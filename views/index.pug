extends layout

block content
  div(class='container narrow')
    div(class='top-spacer')

    form(action='/eat' method='get')
      div(class='row')
        label(for='location')= 'Where are you?'
        input(
          type='text'
          name='location'
          id='location'
          autofocus=true
          placeholder='city, state or zip'
          required=true
        )

      div(class='row')
        label(for='radius')= 'How far will you travel?'
        select(name='radius' id='radius')
          option(value='0.5')= '0.5 miles'
          option(value='1' selected=true)= '1 mile'
          option(value='2')= '2 miles'
          option(value='5')= '5 miles'
          option(value='10')= '10 miles'
          option(value='20')= '20 miles'

      div(class='row')
        input(class='primary' type='submit' value='Find a place to eat')
